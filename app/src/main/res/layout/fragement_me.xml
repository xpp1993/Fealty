<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/fragment_me_iv_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@color/navigation_text_default" />

    <RelativeLayout
        android:id="@+id/fragment_me_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@id/fragment_me_iv_banner">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/me_headpic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/me_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/me_headpic"
            android:text="姓名"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/me_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/me_username"
            android:layout_below="@id/me_username"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:text="手机号"
            android:layout_toRightOf="@id/me_headpic" />

        <ImageView
            android:id="@+id/me_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/fanhui" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/fragment_me_details"
        android:background="#DCDCDC" />
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:background="#ffffff"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/activity_reset_tv_title"
                android:drawableLeft="@mipmap/shezhi"
                android:drawablePadding="10dp"
                style="@style/self_info_layout_tv_title"
                android:text="设置" />
            <ImageView
                android:id="@+id/me_iv_left2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/fanhui" />
        </RelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFF4" />
        <RelativeLayout
            android:id="@+id/relativelayout4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/activity_reset_tv_password_title_again"
                android:drawableLeft="@mipmap/guanyuwomen"
                android:drawablePadding="10dp"
                style="@style/self_info_layout_tv_title"
                android:text="关于我们" />
            <ImageView
                android:id="@+id/me_iv_left3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/fanhui" />
        </RelativeLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFF4" />
        <RelativeLayout
            android:id="@+id/relativelayout5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/binded_user"
                style="@style/self_info_layout_tv_title"
                android:text="用户绑定" />
            <ImageView
                android:id="@+id/binded_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/fanhui" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/linearlayout1"
        android:background="#DCDCDC" />
    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view5"
        android:background="#ffffff"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relativelayout3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/connect_le"
                style="@style/self_info_layout_tv_title"
                android:text="手环连接" />
            <com.leaking.slideswitch.SlideSwitch
                android:id="@+id/bluee_iv_left"
                android:layout_width="54dp"
                android:layout_height="30dp"
                slideswitch:isOpen="false"
                slideswitch:shape="circle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                slideswitch:themeColor="#5DCDBF" >
            </com.leaking.slideswitch.SlideSwitch>
        </RelativeLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFF4" />
        <RelativeLayout
            android:id="@+id/relativelayout6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/info"
                style="@style/self_info_layout_tv_title"
                android:text="监测报警信息" />
            <com.leaking.slideswitch.SlideSwitch
                android:id="@+id/jiancebaojing"
                android:layout_width="54dp"
                android:layout_height="30dp"
                slideswitch:isOpen="false"
                slideswitch:shape="circle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                slideswitch:themeColor="#5DCDBF" >
            </com.leaking.slideswitch.SlideSwitch>
        </RelativeLayout>
    </LinearLayout>

    </RelativeLayout>