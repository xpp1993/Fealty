<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/fragment_me_iv_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@color/navigation_text_default" />

    <RelativeLayout
        android:id="@+id/fragment_me_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_me_iv_banner"
        android:background="#FFF0F0F0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/me_headpic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/unknow_head"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
           />
        <TextView
            android:id="@+id/me_username"
            android:textSize="26sp"
            android:layout_toRightOf="@+id/me_headpic"
            android:text="周杰伦"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
            />
        <TextView
            android:id="@+id/me_phone"
            android:text="手机号：159-9999-9999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_username"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/me_headpic"
            android:layout_alignLeft="@id/me_username"
            />
    </RelativeLayout>

</RelativeLayout>