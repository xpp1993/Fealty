<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/fragment_me_iv_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@color/navigation_text_default" />

    <RelativeLayout
        android:id="@+id/fragment_me_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_me_iv_banner">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/me_headpic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
           />

        <TextView
            android:id="@+id/me_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/me_headpic"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/me_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/me_username"
            android:layout_below="@id/me_username"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/me_headpic"
             />

        <ImageView
            android:id="@+id/me_iv_left"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/fanghui" />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/fragment_me_details"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="#DCDCDC" />
    <RelativeLayout
        android:id="@+id/me_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/connect_le"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接手环"
            android:layout_marginLeft="10dp"
            android:textSize="26sp"
            />
        <ImageView
            android:id="@+id/bluee_iv_left"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/fanghui" />
    </RelativeLayout>

</RelativeLayout>