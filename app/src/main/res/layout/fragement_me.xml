<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/fragment_me_iv_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@color/navigation_text_default" />

    <RelativeLayout
        android:id="@+id/fragment_me_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_me_iv_banner">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/me_headpic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/me_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/me_headpic"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/me_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/me_username"
            android:layout_below="@id/me_username"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/me_headpic" />

        <ImageView
            android:id="@+id/me_iv_left"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/fanghui" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/fragment_me_details"
        android:background="#DCDCDC" />

    <RelativeLayout
        android:id="@+id/me_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/connect_le"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="连接手环"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bluee_iv_left"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:text="未连接"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/me_setting"
        android:background="#DCDCDC" />

    <RelativeLayout
        android:id="@+id/me_binded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/binded_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="绑定用户"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/binded_action"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:text="未绑定"
            android:textSize="15sp" />
</RelativeLayout>
    </RelativeLayout>